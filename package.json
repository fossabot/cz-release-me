{
  "name": "cz-release-me",
  "version": "1.3.2",
  "description": "A customizable commitizen adapter for conventions",
  "bin": "index.js",
  "main": "index.js",
  "files": [
    "lib",
    "CHANGELOG.md",
    "index.js",
    "LICENCE.md",
    "README.md"
  ],
  "scripts": {
    "release": "release-me --release-count=0",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "nyc --reporter=html --reporter=text mocha --timeout 20000 --reporter spec $(find . -name '*test.js' ! -ipath '*node_modules*')",
    "test:check-coverage": "nyc check-coverage --statements 85 --branches 70 --functions 100 --lines 85",
    "test:debug": "DEBUG=mocha npm t",
    "test:watch": "npm t -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design4pro/cz-release-me.git"
  },
  "engines": {
    "node": ">=4.0"
  },
  "keywords": [
    "changelog",
    "conventions",
    "cz"
  ],
  "author": {
    "name": "Rafa≈Ç Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/design4pro/cz-release-me/issues/"
  },
  "homepage": "https://github.com/design4pro/cz-release-me#readme",
  "dependencies": {
    "chalk": "^2.0.0",
    "editor": "^1.0.0",
    "findup": "^0.1.5",
    "inquirer": "^3.1.0",
    "temp": "^0.8.3",
    "winston": "^2.3.1",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-spies": "^0.7.1",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "debug": "^3.0.0",
    "git-dummy-commit": "^1.3.0",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "mock-git": "^1.0.2",
    "nyc": "^11.0.2",
    "release-me": "^1.3.1",
    "rewire": "^2.5.2",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.3",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.10.0",
    "standard": "^10.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  }
}
